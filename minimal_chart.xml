<tryton>
    <data>
        <record model="account.account.type.template" id="account_type_template_asset_current_inventories">
            <field name="name" lang="en">Inventories</field>
            <field name="name" lang="es">Inventarios</field>
            <field name="parent" ref="account.account_type_template_asset_current"/>
            <field name="statement">balance</field>
            <field name="stock" eval="True"/>
            <field name="sequence" eval="20"/>
        </record>

        <record model="account.account.template" id="account_template_stock">
            <field name="name" lang="en">Stock</field>
            <field name="name" lang="es">Existencias</field>
            <field name="type" ref="account_type_template_asset_current_inventories"/>
            <field name="parent" ref="account.account_template_root"/>
        </record>

        <record model="account.account.type.template" id="account_type_template_stock_cos">
            <field name="name" lang="en">Cost of Sale</field>
            <field name="name" lang="es">Costo de Venta</field>
            <field name="parent" ref="account.account_type_template_expense"/>
            <field name="statement">income</field>
            <field name="sequence" eval="30"/>
            <field name="stock" eval="True"/>
            <field name="expense" eval="True"/>
        </record>

        <record model="account.account.template" id="account_template_stock_cos">
            <field name="name" lang="en">Cost of Sale</field>
            <field name="name" lang="es">Costo de Venta</field>
            <field name="type" ref="account_type_template_stock_cos"/>
            <field name="parent" ref="account.account_template_root"/>
        </record>
    </data>
</tryton>
